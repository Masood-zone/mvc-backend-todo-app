{
  "name": "fullstack-todo-app",
  "version": "1.0.0",
  "description": "Todo App with MVC Architecture",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "build": "npm run prisma:generate && npm run prisma:migrate && npm run build:css",
    "start": "node server.js",
    "lint": "next lint",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/style.css --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "express",
    "prisma",
    "tailwindcss",
    "ejs",
    "method-override",
    "fullstack",
    "todo-app"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "connect-flash": "^0.1.1",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "method-override": "^3.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "prisma": "^6.4.1",
    "tailwindcss": "3.4.17"
  }
}
